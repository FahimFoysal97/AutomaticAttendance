<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button_Students_List"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginTop="8dp"
            android:onClick="studentListButtonClicked"
            android:text="Students List"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="@+id/button_My_Courses_List"
            app:layout_constraintStart_toStartOf="@+id/button_My_Courses_List"
            app:layout_constraintTop_toBottomOf="@+id/button_My_Courses_List" />

        <Button
            android:id="@+id/button_My_Courses_List"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:onClick="myCoursesListButtonClicked"
            android:text="My Courses List"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_make_attendance_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginTop="8dp"
            android:onClick="makeAttendanceSheetButtonClicked"
            android:text="Make Attendance Sheet"
            android:textAlignment="center"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="@+id/button_Students_List"
            app:layout_constraintStart_toStartOf="@+id/button_Students_List"
            app:layout_constraintTop_toBottomOf="@+id/button_Students_List" />

        <Button
            android:id="@+id/button_take_attendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="takeAttendanceButtonClicked"
            android:text="Take Atendance"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_show_attendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="showAttendanceSheetsButtonClicked"
            android:text="Show Attendance Sheets"
            android:textAllCaps="false" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>